generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserProfile {
  firstName String
  lastName  String
}

model Classroom {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt String
  name      String
  updatedAt String
}

model Lesson {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Mark {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Student {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  email Json?  @unique
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime    @db.Date
  email     String      @unique
  password  String
  profile   UserProfile
  updatedAt DateTime    @db.Date
}
